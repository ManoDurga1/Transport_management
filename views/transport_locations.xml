<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_transport_location_trr" model="ir.ui.view">
        <field name="name">locations</field>
        <field name="model">transport.locations</field>
        <field name="arch" type="xml">
            <tree string="Locations">
                <field name="location"/>
            </tree>
        </field>
    </record>
    <record id="action_transport_locations" model="ir.actions.act_window">
        <field name="name">Transport.locations</field>
        <field name="res_model">transport.locations</field>
        <field name="view_mode">tree,form</field>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first transport location.
            </p>
          </field>
    </record>

</odoo>