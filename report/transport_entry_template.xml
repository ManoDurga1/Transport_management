<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_transport_entry">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="o">
                        <!-- Company Logo and Address -->
                        <div class="header">
<!--                            <div style="float: left;">-->
<!--                                &lt;!&ndash; <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % (o.company_id.logo)" alt="Company Logo" class="logo"/> &ndash;&gt;-->
<!--                            </div>-->
                        </div>
                            <main>

                            <div style="text-align: center;">
                                <h2>Transport Report</h2>
                            </div>
                                <br/>

                                <div class="row">
                                    <div class="col-6">
                                        <tr>
                                            <td style="padding: 5px 10px;">
                                                <strong>Transport No:</strong></td>
                                            <td style="padding: 5px 10px;">
                                              <t t-esc="o.name"/> </td>
                                        </tr><br/>
                                        <tr>
                                            <td style="padding: 5px 10px;">
                                                <strong>LR Number:</strong></td>
                                            <td style="padding: 5px 10px;">
                                                <t t-esc="o.lr_number"/></td>
                                        </tr><br/>
                                        <tr>
                                            <td style="padding: 5px 10px;">
                                                <strong>Date:</strong></td>
                                            <td style="padding: 5px 10px;">
                                                <t t-esc="o.transport_date"/></td>
                                        </tr>
                                    <br/>
                                    </div>
                                    <div class="col-6">
                                        <t t-esc="o.customer_id.name"/><br/>
                                        <t t-esc="o.customer_id.street"/> ,
                                        <t t-esc="o.customer_id.mobile"/><br/>
                                        <t t-esc="o.customer_id.city"/>,
                                        <t t-esc="o.customer_id.zip"/><br/>
                                        <t t-esc="o.customer_id.country_id.name"/>
                                    </div>
                                </div>
                                <br/>

                        <!-- Transporter and Vehicle Details -->
                        <h3>Transporter Details</h3>  <br/>
                        <table class="table table-sm table-borderless">
                            <thead>
                            <tr>
                                <th>Delivery Order</th>
                                <th>Transport By</th>
                                <th>Transport Vehicle</th>
                                <th>No Of Parcels</th>
                            </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-esc="o.delivery_order_id.name"/>
                                    <td t-esc="o.transport_id.company_name"/>
                                    <td t-esc="o.vehicle_id.name"/>
                                    <td t-esc="o.no_of_parcels"/>
                                </tr>
                            </tbody>
                        </table><br/><br/>

                        <!-- Route Details -->
                        <h3>Route Details</h3><br/>
                        <table class="table table-sm table-borderless">
                            <thead>
                                <tr>
                                    <th>Start Location</th>
                                    <th>End Location</th>
                                    <th>Distance</th>
                                    <th>Time Hours</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.location_route_ids" t-as="route">
                                    <td t-esc="route.start_location_id.location"/>
                                    <td t-esc="route.end_location_id.location"/>
                                    <td t-esc="route.distance"/>
                                    <td t-esc="route.time"/>
                                    <td t-esc="route.start_time"/>
                                    <td t-esc="route.end_time"/>
                                    <td t-esc="route.state"/>
                                </tr>
                            </tbody>
                        </table>
                 </main>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
